def agb_uebersetzer(text):
    # Unsere Datenbank fÃ¼r Jura-Kauderwelsch zu Klartext
    uebersetzungen = {
        "wir behalten uns das recht vor": "ğŸ’¡ Klartext: Die machen, was sie wollen, ohne dich zu fragen.",
        "daten an drittanbieter weiterzugeben": "ğŸ’¡ Klartext: Deine Infos werden an andere Firmen verkauft.",
        "stillschweigende verlÃ¤ngerung": "ğŸ’¡ Klartext: Das ist eine Abo-Falle, wenn du nicht aufpasst.",
        "nutzungsbasierte werbeausspielung": "ğŸ’¡ Klartext: Du wirst lÃ¼ckenlos Ã¼berwacht, um dir Werbung zu zeigen.",
        "haftungsausschluss bei fahrlÃ¤ssigkeit": "ğŸ’¡ Klartext: Wenn sie Mist bauen, wollen sie nicht dafÃ¼r zahlen."
    }
    
    print("--- ğŸ—£ï¸ JURA-KLARTEXT ÃœBERSETZUNG ---")
    
    text_klein = text.lower()
    uebersetzt = False
    
    for phrase, klartext in uebersetzungen.items():
        if phrase in text_klein:
            print(f"Gefundene Floskel: '{phrase}'")
            print(f"{klartext}\n")
            uebersetzt = True
            
    if not uebersetzt:
        print("Keine bekannten Standard-Floskeln gefunden. GlÃ¼ck gehabt!")

# Test mit einem typischen AGB-Satz
